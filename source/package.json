{
  "name": "gueopic-app",
  "description": "Accessibility application that let you communicate with your friends and family using custom images and voice buttons.",
  "license": "GPL-3.0",
  "homepage": "https://gueopic.com/",
  "version": "1.1.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gueopic/App.git"
  },
  "bugs": {
    "url": "https://github.com/Gueopic/App/issues"
  },
  "author": {
    "name": "Ruben Arroyo Ceruelo",
    "email": "ruben@racs.es",
    "url": "https://racs.es"
  },
  "contributors": [
    {
      "name": "Ruben Arroyo Ceruelo",
      "email": "ruben@racs.es",
      "url": "https://github.com/protocolnebula/"
    }
  ],
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/ProtocolNebula"
  },
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --disable-host-check --host 0.0.0.0",
    "start:android": "npx ionic capacitor run android --livereload --external",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "clear:unused:icons": "node ./tools/clear-unused-icons.js",
    "analyze": "webpack-bundle-analyzer www/stats.json",
    "capacitor:copy:before": "npm run clear:unused:icons",
    "prepare:capacitor": "ionic build && ionic capacitor sync",
    "build:android": "ionic capacitor build android --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "keywords": [
    "communication",
    "accessibility",
    "autism",
    "aphonia",
    "images",
    "voice",
    "buttons",
    "hybrid"
  ],
  "files": [
    "source/www/"
  ],
  "dependencies": {
    "@angular/cdk": "^20.2.11",
    "@angular/common": "~20.3.10",
    "@angular/core": "~20.3.10",
    "@angular/forms": "~20.3.10",
    "@angular/platform-browser": "~20.3.10",
    "@angular/platform-browser-dynamic": "~20.3.10",
    "@angular/router": "~20.3.10",
    "@capacitor/android": "^7.0.0",
    "@capacitor/app": "^7.0.0",
    "@capacitor/camera": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/filesystem": "^7.0.0",
    "@capacitor/haptics": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@capacitor/keyboard": "^7.0.0",
    "@capacitor/splash-screen": "^7.0.0",
    "@capacitor/status-bar": "^7.0.0",
    "@capawesome/capacitor-android-edge-to-edge-support": "^7.2.3",
    "@ionic/angular": "^8.0.0",
    "@ionic/storage-angular": "^4.0.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "capacitor-voice-recorder": "^6.0.0",
    "cordova-sqlite-storage": "^6.0.0",
    "lowdb": "^1.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~20.3.9",
    "@angular-eslint/builder": "20.5.1",
    "@angular-eslint/eslint-plugin": "20.5.1",
    "@angular-eslint/eslint-plugin-template": "20.5.1",
    "@angular-eslint/schematics": "20.5.1",
    "@angular-eslint/template-parser": "20.5.1",
    "@angular/cli": "~20.3.9",
    "@angular/compiler": "~20.3.10",
    "@angular/compiler-cli": "~20.3.10",
    "@angular/language-service": "~20.3.10",
    "@capacitor/cli": "^7.0.0",
    "@ionic/angular-toolkit": "^11.0.1",
    "@ionic/cli": "^7.2.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.23.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.2.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "husky": "^4.3.0",
    "jasmine-core": "~5.1.2",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "typescript": "~5.8.3",
    "webpack-bundle-analyzer": "^4.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "ng build --aot true"
    }
  }
}
